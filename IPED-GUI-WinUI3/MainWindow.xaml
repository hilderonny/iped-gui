<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="IPED_GUI_WinUI3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <Page>

        <NavigationView
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="True"
            x:Uid="NavigationView"
            SelectionChanged="NavView_SelectionChanged"
            x:Name="NavView"
            >
            <NavigationView.MenuItems>
                <NavigationViewItem x:Uid="HomeMenuItem" Tag="IPED_GUI_WinUI3.Pages.HomePage" Icon="Home" />
                <NavigationViewItem x:Uid="ProcessingMenuItem" Tag="IPED_GUI_WinUI3.Pages.ProcessingPage" Icon="{ui:FontIcon Glyph=&#xE9F5;}" />
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame"/>
        </NavigationView>

    </Page>
    
</Window>
